{
  "__table_description__": "Author information for a publishing system",
  "id": {
    "type": "number",
    "description": "Unique identifier for the author",
    "constraints": {
      "primary_key": true
    }
  },
  "name": {
    "type": "text",
    "description": "Full name of the author",
    "constraints": {
      "max_length": 100
    }
  },
  "email": {
    "type": "email",
    "description": "Author's contact email address",
    "constraints": {
      "unique": true,
      "max_length": 150
    }
  },
  "bio": {
    "type": "text",
    "description": "Author's biographical information",
    "constraints": {
      "max_length": 2000
    }
  },
  "birth_date": {
    "type": "date",
    "description": "Author's date of birth"
  }
}
