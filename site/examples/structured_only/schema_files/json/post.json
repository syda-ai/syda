{
  "__table_description__": "Blog posts created by users",
  "id": {
    "type": "number",
    "description": "Unique identifier for the post",
    "constraints": {
      "primary_key": true
    }
  },
  "author_id": {
    "type": "foreign_key",
    "description": "Reference to the user who created the post",
    "references": {
      "schema": "User",
      "field": "id"
    }
  },
  "title": {
    "type": "text",
    "description": "Title of the blog post",
    "constraints": {
      "unique": true,
      "max_length": 200
    }
  },
  "content": {
    "type": "text",
    "description": "Full content of the blog post",
    "constraints": {
      "max_length": 50000
    }
  },
  "publish_date": {
    "type": "date",
    "description": "Date when the post was published"
  },
  "category": {
    "type": "text",
    "description": "Category of the blog post",
    "constraints": {
      "max_length": 50
    }
  },
  "tags": {
    "type": "text",
    "description": "Comma-separated list of tags for the post",
    "constraints": {
      "max_length": 500
    }
  },
  "status": {
    "type": "text",
    "description": "Publication status of the post (draft, published, archived)"
  }
}
